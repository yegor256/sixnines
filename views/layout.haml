!!! 5
%html{lang: 'en'}
  %head
    %title
      = title
    %meta{charset: 'UTF-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %meta{name: 'keywords', content: 'availability, six nines, web site'}
    %meta{name: 'description', content: description}
    - if defined? amphtml
      %link{rel: 'amphtml', href: amphtml}
    %link{type: 'text/css', href: url('css/main.css'), rel: 'stylesheet'}
    %link{rel: 'shortcut icon', href: '/images/favicon.png', type: 'image/png'}
    %script{src: '//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js'}
    %script{src: '//checkout.stripe.com/checkout.js'}
  %body
    %section
      %header
        %nav
          %ul.menu
            %li
              %a.no-underline{href: '/'}
                %img{src: url('/images/logo.svg'), width: '50', alt: 'logo'}
            - if defined? user
              %li
                %ul
                  %li
                    %a.bold.dark{href: '/a'}
                      = "@#{user[:login]}"
                  %li
                    %a{href: '/logout'}
                      Logout
            - else
              %li.right
                %a.no-underline{href: login_link}
                  %i.fa.fa-toggle-off
                  Sign-in
      %article
        =yield
      %footer
        %nav
          %ul
            %li
              = '--'
          %ul
            %li
              = "#{ENV['HEROKU_RELEASE_VERSION']}/#{ver}"
          %ul
            %li
              %a.bold{href: '/terms'} Terms
            %li
              %a.bold{href: '/rss'} RSS
          %ul
            %li
              %a{href: 'https://github.com/yegor256/sixnines/stargazers'}
                %img{src: '//img.shields.io/github/stars/yegor256/sixnines.svg?style=flat-square', alt: 'GitHub stars'}
            %li
              %a{href: 'https://www.sixnines.io/h/9ccc'}
                %img{src: '//www.sixnines.io/b/9ccc?style=flat', alt: 'Availability badge'}
